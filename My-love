</div>

<script>
// Welcome text typing
const welcomeText="Welcome my life";
let idx=0;
function typeText(){
  if(idx<welcomeText.length){
    document.getElementById('welcomeText').innerHTML+=welcomeText[idx];
    idx++;
    setTimeout(typeText,200);
  }
}
typeText();

function nextWelcome(){
  document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
  document.getElementById('passwordPage').classList.add('active');
}

// Password logic
const PASSWORD="202327";
let wrongAttempts=0;
function checkPassword(){
  const input=document.getElementById('passwordInput');
  if(input.value===PASSWORD){
    document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
    document.getElementById('q1').classList.add('active');
    wrongAttempts=0;
    createStars("q1");
  } else {
    wrongAttempts++;
    if(wrongAttempts===1){
      document.getElementById('hint1').style.display="block";
    } else if(wrongAttempts===2){
      document.getElementById('hint2').style.display="block";
    } else if(wrongAttempts>=3){
      document.getElementById('hint3').style.display="block";
    }
    input.value="";
  }
}

// Show Next Page
function showPic(nextId){
  document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
  document.getElementById(nextId).classList.add('active');
  createStars(nextId);
}

// Letter animation
const letterBox=document.getElementById('letterBox');
letterBox.addEventListener('click',()=>{
  letterBox.classList.add('showLetter');
  document.getElementById('finalPic').style.display="block";
});

// Generate stars
function createStars(pageId){
  const container=document.querySelector(`#${pageId} .stars`);
  if(!container || container.children.length>0) return;
  for(let i=0;i<60;i++){
    const star=document.createElement("div");
    star.className="star";
    star.style.top=Math.random()*100+"%";
    star.style.left=Math.random()*100+"%";
    star.style.animationDuration=(1+Math.random()*3)+"s";
    container.appendChild(star);
  }
}
</script>

</body>
</html>
